<!-- Display problem and solution -->
<div class ="row features justify-content-center">
  <div class="col-md-8">
    <div class="card border-primary">
      <h5 class="card-header bg-primary text-secondary">Investigate</h5>
        <div class="card-body">
          <h5 class="card-title"><%=@problem.question%></h5>
          <!-- <p class="card-text">Solution: </p>
          <p>hey</p>
          <p>My final answer is hey.</p> -->
          <hr>
          <h5 class="card-title text-success">Share your Solution</h5>
          <form action ="/solutions/<%=@problem.id%" method ="post">
            <!-- <div class ="form-group row">
              <label for="problem" class="col-sm-2 col-form-label">Problem</label>
                <div class="col-sm-10">
                  <textarea name ="problem" class ="form-control" placeholder ="<%=@problem.question%>" readonly></textarea>
                </div>
            </div> -->

            <div class ="form-group row">
              <label for="explanation" class="col-sm-2 col-form-label">Explanation</label>
                <div class="col-sm-10">
                  <textarea name ="explanation" class ="form-control" placeholder ="Explain your thinking here."required></textarea>
                </div>
            </div>

            <div class ="form-group row">
              <label for="student_answer" class="col-sm-2 col-form-label">Numerical Answer</label>
                <div class="col-sm-10">
                  <input type ="text" class ="form-control" name ="student_answer" required>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Post</button>
                </div>
            </div>
          </form>
      </div>
    </div>
  </div>


